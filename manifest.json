{
  "manifest_version": 3,
  "name": "Make Twitter Tweet Again",
  "version": "1.0",
  "description": "We didn't ask for an 'X'",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "action": {},
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["favicon.ico"],
      "matches": ["https://twitter.com/*"]
    }
  ]
}
